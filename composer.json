{
    "require": {
        "phpmailer/phpmailer": "^6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@dump-autoload"
        ],
        "post-install-cmd": [
            "@dump-autoload"
        ],
        "dump-autoload": "composer dump-autoload -o",
        "test": "phpunit"
    }
}
